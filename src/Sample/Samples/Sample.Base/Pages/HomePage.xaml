<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Sample.HomePage"
    Title="Navigation with animations"
    BackgroundColor="{StaticResource MainBackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.RowSpan="4" Source="phone.png" Aspect="AspectFill"/>
        <Label Grid.Row="1" FontSize="50" TextColor="#3F51B5" Text="&#xf0d0;" 
            FontFamily="{StaticResource FontAwesome}" HorizontalOptions="Center"/>
        <Label Grid.Row="2" FontSize="18" TextColor="White" HorizontalOptions="Center" Text="AnimationNavigationPage"/>
        <ContentView Grid.Row="3" Padding="70,0">
            <Label FontSize="16" TextColor="White" HorizontalTextAlignment="Center" 
                Text="This is NavigationPage with custom page transitions animation effects."/>
        </ContentView>
    </Grid>
</ContentPage>